{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/styles/*": ["src/styles/*"],
      "@/js/*": ["src/js/*"],
      "@/components/*": ["src/components/*"]
    }
  }
}
